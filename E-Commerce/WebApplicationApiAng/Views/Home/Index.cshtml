
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
   
<script src="~/Scripts/angular.min.js"></script>





<script>
    var mainLayout = angular.module("mainLayoutApp", []);

    var model = {
        user: "Adams",
        items: [{ action: "Buy Flowers", done: false },
                { action: "Get Shoes", done: false },
                { action: "Collect Tickets", done: true },
                { action: "Call Joe", done: false }]
    };
    mainLayout.controller("todoList", function ($scope) {
        $scope.todo = model;
        $scope.incompleteCount = function () {
            var count = 0;
            angular.forEach($scope.todo.items, function (item) {
                if (item.done) {
                    count++;
                }
            });
            return count;

        };

        $scope.warningLavel = function () {
            return $scope.incompleteCount() < 3 ? "label-success" : "label-warning";
        }
        $scope.addNewItem = function (actionText) {
            $scope.todo.items.push({ action: actionText, done: false });
        }
    });
    mainLayout.filter("checkedItems", function () {
        return function (items, showComplete) {
            var resultArr = [];
            angular.forEach(items, function (item) {
                if (item.done == false || showComplete == true)
                    resultArr.push(item);
            });
            return resultArr;
        }
    })
</script>

<div ng-controller="todoList">
    <div class="page-header">
        <h1>{{todo.user}}'s To Do List  <span class="label label-default" ng-class="warningLavel()"
      ng-hide="incompleteCount()==0">
    {{incompleteCount()}}
</span></h1>
      
    </div>
    <div class="panel">
        <div class="input-group">
            <input class="form-control" ng-model="actionText" />
            <span class="input-group-btn">
                <button class="btn btn-default" ng-click="addNewItem(actionText)">Add</button>
            </span>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Description</th>
                    <th>Done</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in todo.items|checkedItems:showComplete|orderBy:'action'">
                    <td>{{item.action}}</td>
                    <td>{{item.done}}</td>
                    <td><input id="Checkbox1" type="checkbox" ng-true-value="{{item.action}}" ng-model="item.done" /></td>
                </tr>
            </tbody>
        </table>
        <div class="checkbox-inline">
            <label><input id="Checkbox1" type="checkbox" ng-model="showComplete" />Show Complete</label>
        </div>
    </div>

</div>





