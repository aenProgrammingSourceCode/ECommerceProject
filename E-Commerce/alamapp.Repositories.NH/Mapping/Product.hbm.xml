<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    namespace="alamapp.Model.Products"
        assembly="alamapp.Model">
  
  <class name="Product" table="Products" lazy="false" >
    <id  name="Id" column="ProductID" type="int" unsaved-value="0">
      <generator class="native" />
    </id>

    <many-to-one name="Title"
                    class="ProductTitle"
                    column="ProductTitleID"
                    not-null="true"
                    lazy="false"/>
  
  
  <many-to-one name="Size"
                     class="alamapp.Model.Products.Size"
                     column="SizeID"
                     not-null="true" 
                     lazy="false"/>
  </class>
</hibernate-mapping>